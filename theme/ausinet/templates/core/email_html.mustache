{{!
    @template core/email_html

    Template for all html emails. Note that it may wrap content formatted
    elsewhere in another a module template.

    Context variables required for this template:
    * sitefullname
    * siteshortname
    * sitewwwroot
    * subject
    * to
    * toname
    * touserid
    * tousername
    * from
    * fromname
    * replyto
    * replytoname
    * body
    * prefix

    Example context (json):
    {
        "prefix": "[Prefix Text]",
        "body": "Email body"
    }
}}



<div style="max-width:650px;width:100%;background:#fff;margin:0 auto;border:1px solid #ddd;font-size:14px;font-family:verdana;">
    <table width="100%" max-width="650" cellpadding="0" cellspacing="0" border="0" style="background:#f5f5f5">
        <tbody>
            <tr>
                <td border="0" style="text-align:left;color:#333;background:#fff;border-bottom:1px solid #ddd;">
                    <table width="100%">
                        <tbody>

                            <tr>
                                <td height="10"></td>
                            </tr>
                            <tr>
                                <td align="center"><a href="{{sitewwwroot}}" target="_blank">
                                    <img src="{{sitewwwroot}}/theme/ausinet/pix/logo.png" alt="{{sitefullname}}" style="width:200px;"></a>
                                </td>
                            </tr>
                            <tr>
                                <td height="10"></td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
            <!-- space between blocks -->
            <tr>
                <td height="15"></td>
            </tr>
            <!-- Email body content -->
            <tr>
                <td border="0" style="text-align:left;color:#000;line-height:10px;">
                    <table width="85%" align="center">
                        <tbody>            
                            <tr>
                                <td width="100%" align="left">
                                    Hi {{toname}},
                                </td>
                            </tr>
                            <tr>
                                <td height="20"></td>
                            </tr>

                           <tr> 
                            <td width="100%" align="left" style="line-height: 26px;">
                                <!-- Dynamic message content -->
                                {{{body}}}
                            </td>
                          </tr>
                            <tr>
                                <td height="15"></td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>

            <!-- space between blocks -->
            <tr>
                <td height="10"></td>
            </tr>  

            <!-- Email signaure content -->
            <tr>
                <td width="100%" align="left" style="text-align:left;color:#000;">
                    <table align="center" width="85%">
                        <tbody>                      
                            <tr>
                                <td width="100%" align="left">
                                    Thanks,
                                </td>
                            </tr>
                            <tr>
                                <td width="100%" align="left">
                                    {{sitefullname}} <br>
                                </td>
                            </tr>
                            <tr>
                                <td width="100%" align="left" style="text-align:left;text-decoration:underline">
                                    Email: <a href="mailto:support@ausinet.com.au" target="_blank">support@ausinet.com.au</a></td>
                            </tr>                            
                            <tr>
                                <td height="5"></td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
            
            <!-- space between blocks -->
             <tr>
                <td height="20"></td>
            </tr>
            
        </tbody>
        
        <tfoot>
            <tr>
                <td align="center" height="50px" style="background:#1b68b3;color:#fff;">
                    <a href="{{sitewwwroot}}" style="color:#fff;" > {{sitefullname}} </a>
                </td>
            </tr>
        </tfoot>
        
                
    </table>
</div>